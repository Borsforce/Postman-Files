{
	"info": {
		"_postman_id": "93bdbb66-8725-4799-879f-36a86e6041bf",
		"name": "Tindev API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Security",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const jsonData = pm.response.json();",
									"const apiToken = jsonData.token;",
									"",
									"setVariable('API_TOKEN', apiToken);",
									"",
									"function setVariable(key, value) {",
									"    const realValue = getOrDefault(value, key);",
									"",
									"    pm.collectionVariables.set(key, realValue);",
									"}",
									"",
									"function getOrDefault(value, key) {",
									"    if (value === null || value === undefined) {",
									"        return pm.collectionVariables.get(key);",
									"    }",
									"",
									"    return value;",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{EMAIL}}\",\n    \"password\": \"{{PASSWORD}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{BASE_URL}}/login",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{USERNAME}}\",\n    \"password\": \"{{PASSWORD}}\",\n    \"email\": \"{{EMAIL}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{BASE_URL}}//register",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"",
								"register"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "User",
			"item": [
				{
					"name": "Current user info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{BASE_URL}}/user/me",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"user",
								"me"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{API_TOKEN}}",
				"type": "string"
			}
		]
	},
